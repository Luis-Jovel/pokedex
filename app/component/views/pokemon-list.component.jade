div#loading(*ngIf='loading')
	div.pokeball#normal
	div.pokeball#great
	div.pokeball#ultra
	div.pokeball#master
	div.pokeball#safari
div.pokemon-list
	div.col-lg-3.col-md-3.col-sm-4.col-xs-6.pokemon-container(*ngFor="let pokemon of pokemons")
		a.card.grow([routerLink]="['/pokemon', pokemon.id]")
			span.pokemon-id \#{{pokemon.id}}
			img.sprite(src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{pokemon.id}}.png",alt="")
			label {{pokemon.name}}